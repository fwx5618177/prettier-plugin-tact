{
    "compilerOptions": {
        "checkJs": true,
        "strict": false,
        "module": "CommonJS",
        "target": "ES2021",
        "moduleResolution": "node",
        "baseUrl": ".",
        "rootDir": ".",
        "outDir": "./dist",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "declarationDir": "./dist",
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "noEmitOnError": true,
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "allowJs": true
    },
    "include": ["src", "global.d.ts", "./types"],
    "exclude": [
        "node_modules",
        "dist",
        "**/dist",
        "**/*.spec.ts",
        "**/*.test.ts",
        "src/schema/grammar.ohm-bundle.js"
    ]
}
